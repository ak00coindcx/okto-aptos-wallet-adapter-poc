{
  "manifest_version": 3,
  "name": "okto-wallet",
  "version": "1.0",
  "description": "Okto Wallet POC for Aptos",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [],
  "content_scripts": [
    {
      "matches": [],
      "js": [],
      "run_at": "document_idle"
    }
  ]
}
